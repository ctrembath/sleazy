<html lang="en" ng-app="app">
  <head> 
  <script src="//connect.soundcloud.com/sdk.js" ></script>
  <link href='http://fonts.googleapis.com/css?family=Source+Code+Pro:200,300,400,600' rel='stylesheet' type='text/css'>
  <title> sleazy sounds </title>
  </head>
  <body ng-controller="search">
  <center>

  <header>
  
  <h2>Sleazy <%= image_tag "sleazy.png", :class => "logo" %> Sounds </h2>
  </header>

        
      <div id="wrap-container">
        <div id="wrap">
          <form id="searchingForm" ng-submit="activateSearch()">
          <input class="search" type="text" placeholder="what track u wnt?" ng-model="toSearchTemp" />
          <input id="search_submit" value="Rechercher" type="submit">
          </form> 
          </div>
        </div>

          <ul id="wrapper" ng-repeat="song in list" >
            <a ng-click="playStopSong(song)">
              <img class="artwork" ng-src="{{song.artwork_url}}" />
            </a>
            <button ng-click="submit(song)">Save</button>
          </ul> 

        <a class"test">  <%= image_tag "sleazy.png", :class => "testimg" %> 
        </a>

    <footer>
      <div class="options">
          <a ng-click="" id="add">+</a>
          <a ng-click="" id="pause">pause</a>
          <%= link_to "Profile", profile_path%>
        </div>
    </footer>
    </center>

  
  </body>

</html>